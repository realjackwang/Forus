    </com.example.Jack.Forus.Topbar>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:srcCompat="@color/common_google_signin_btn_text_dark_default" />
</LinearLayout>